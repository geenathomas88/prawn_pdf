<table>
  <tr>
    <td width ="92%"><h5>Listing Roles</h5></td>    
    <td><%= link_to 'New Role', new_role_path , class: "btn"%></td>
  </tr>
</table>
<table class ="table table-striped">
  <tr>
    <th>Role Name</th>
    <th>Description</th>     
    <th>Show</th>
    <th>Edit</th>
    <th>Destroy</th>
  </tr>
<% @roles.each do |role| %>
  <tr>
    <td><%= role.name %></td> 
    <td><%= role.description %></td>  
    <td><%= link_to '<i class="icon-eye-open"></i>'.html_safe, role %></td>
    <td><%= link_to '<i class="icon-pencil"></i>'.html_safe, edit_role_path(role) %></td>
    <td><%= link_to  '<i class="icon-trash"></i>'.html_safe, role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>


